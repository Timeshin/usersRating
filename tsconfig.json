{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "src",
    "useDefineForClassFields": true,
    "paths": {
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/stores/*": ["domain/stores/*"],
      "@/domain/*": ["domain/*"],
      "@/adapters/*": ["adapters/*"],
      "@/config/*": ["config/*"],
      "@/components": ["presntation/components/index"],
      "@/layouts": ["presntation/layouts/index"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src/vite-env.d.ts", "src/shared-kernel.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
